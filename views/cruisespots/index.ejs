<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
    <h1>All Cruise Ports</h1>
    <div>
        <a href="/cruisespots/new">Add Cruise Port</a>
    </div>
        <% for (let cruisespot of cruisespots) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(cruisespot.images.length) {%> 
                        <img class="img-fluid" alt="" src="<%=cruisespot.images[0].url%>">
                        <% }else { %> 
                            <img class="img-fluid" alt="" src="https://images.unsplash.com/photo-1520285774798-2f1616131a68?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwxfDB8MXxyYW5kb218MHwyMTk2ODMwfHx8fHx8fDE2MjYxNTI1NzY&ixlib=rb-1.2.1&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=1080">
                            <% } %> 
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= cruisespot.title %> </h5>
                            <p class="card-text"><%= cruisespot.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= cruisespot.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/cruisespots/<%=cruisespot._id%>">View <%= cruisespot.title %> </a>
                        </div>
                    </div>
                </div>
                
            </div>
        <% }%>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const cruisespots = {features: <%- JSON.stringify(cruisespots) %>};
        </script>
        <script src="javascripts/clusterMap.js"></script>